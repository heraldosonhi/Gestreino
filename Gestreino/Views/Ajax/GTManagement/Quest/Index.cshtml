@using Gestreino.Models
@using Gestreino.Classes
@model  GT_Quest_Anxient
@{Layout = null; }
<div class="card-header card-reader-radius bg-primary-pickled-bluewood">
    <h3 class="text-white mb-0">Avaliação</h3>
</div>
<div class="modal-body">
    @if (ViewBag.Action == "Resultado")
    {
        <div class="row">
            <div class="col-md-12">
                <div class="animated flipInY">
                    <div class="tile-stats p-2">
                        <h5>Estado Psicológico - Ansiedade e Depressão</h5>
                        <span class="handle-success-message"></span>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="handle-error alert alert-accent"
                                     role="alert" style="display:none;">
                                    <div class="d-flex flex-wrap align-items-start">
                                        <div class="mr-8pt">
                                            <i class="fa-solid fa-shield-halved"></i>
                                        </div>
                                        <div class="flex"
                                             style="min-width: 180px">
                                            <span class="text-black-100">
                                                <strong>Atenção!</strong> <span class="handle-error-message"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div id="anxientFormClone" hidden></div>
        <div>
            <button class="btn btn-success btn-sm" id="submitanxientForm" onclick="submitanxientForm()"><i class="fa fa-floppy-o"></i> Guardar</button>
            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Concluir</button>
        </div>
    }
    @if (ViewBag.Action == "Remover")
    {
        using (Ajax.BeginForm("../gtmanagement/DeleteGTQuest", null, new AjaxOptions { HttpMethod = "POST", LoadingElementId = "", LoadingElementDuration = 2000, OnBegin = "loadIn", OnComplete = "loadOut", OnSuccess = "handleSuccess", OnFailure = "handleFailure", UpdateTargetId = "" }, new { id = "" }))
        {
            @Html.AntiForgeryToken()
            <div class="row col-lg-12">
                @{ foreach (var id in ViewBag.bulkids)
                    {
                        <input type="hidden" name="Ids[]" value="@id" />
                    }
                }
                <p>Deseja remover este(s) item(s)?</p>

            </div>
            <div>
                <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary btn-sm" id="BtnSubmit">Submeter</button>
            </div>
        }
    }
</div>
                <script>
                    $('#anxientForm').clone(true).appendTo('#anxientFormClone');
                    $("#anxientFormClone form:first-child").submit();
                    $('#anxientFormClone input[name="frmaction"] ').val('1')
                    
                    //if ($('.handle-error-message').text() != '')
                    //    $('#submitanxientForm').hide()

                    function submitanxientForm() { $("#anxientFormClone form:first-child").submit(); }

                </script>
