                                            <div class="col-md-2">
                                                <label class=" col-form-label" for="FR_Obesidade">Obesidade</label>
                                            </div>
                                        }
                                        @if (ViewBag.dataCaract[0].FR_DB)
                                        {
                                            <div class="col-md-2">
                                                <label class=" col-form-label" for="FR_Diabetes">Diabetes</label>
                                            </div>
                                        }
                                    </div>
                                    <div class="row">
                                        @if (ViewBag.dataCaract[0].FR_IN)
                                        {
                                            <div class="col-md-2">
