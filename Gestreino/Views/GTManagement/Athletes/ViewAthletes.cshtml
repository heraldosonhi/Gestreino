                                        {
                                            <div class="col-md-3">
                                                <label class=" col-form-label" for="OB_BemEstar">Bem estar / Sa&#250;de</label>
                                            </div>
                                        }
                                        @if (ViewBag.dataCaract[0].OB_TO)
                                        {
                                            <div class="col-md-2">
                                                <label class=" col-form-label" for="OB_Tonificar">Tonificar</label>
                                            </div>
                                        }
                                        @if (ViewBag.dataCaract[0].OB_OT)
                                        {
                                            <div class="col-md-2">
                                                <label class=" col-form-label" for="OB_Outros">Outros</label>
                                            </div>
                                        }
                                    </div>
                                </div>
