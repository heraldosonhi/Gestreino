                                        {
                                            <div class="col-md-4">
                                                <label class=" col-form-label" for="FR_Examescomplementares">Exames complementares</label>
                                            </div>
                                        }
                                        @if (ViewBag.dataCaract[0].FR_OT)
                                        {
