@model Gestreino.Models.Athlete
@{
    ViewBag.Title = ViewBag.data[0].NOME;
}
<!-- page content -->
<div class="right_col" role="main">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("athletes","gtmanagement")">Atletas</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewBag.data[0].NOME</li>
        </ol>
    </nav>
